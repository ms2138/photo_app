<% provide(:title, "Users") %>

<div class="user-profile">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mb-5">Users</h1>
      <% @users.each do |user| %>
        <div class="user my-4 d-flex align-items-center justify-content-between">
          <span class="img-fluid mt-1 pe-5"><%= gravatar_for user.email %> <%= link_to "#{user.name}", user, class: "mx-3" %></span>
          <% if policy(user).destroy? %>
            <%= link_to user_path(user), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
              <i class="fas fa-times fa-xs" aria-hidden="true" style="color: gray;"></i>
            <% end %>
          <% end %>
        </div>
        <hr/>
      <% end %>
      <div class="d-flex justify-content-center my-5">
        <%= paginate @users, class: "pagination" %>
      </div>
    </div>
  </div>
</div>
