<ul class="nav tabs">
  <li class="nav-item">
    <a class="nav-link active" id="pills-posts-tab" href="#" data-bs-toggle="pill" data-bs-target="#pills-posts" role="tab" aria-controls="pills-posts" aria-selected="false">
      POSTS
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="pills-liked-tab" href="#" data-bs-toggle="pill" data-bs-target="#pills-liked" role="tab" aria-controls="pills-tagged" aria-selected="false">
      LIKED
    </a>
  </li>
</ul>
<div class="tab-content py-4" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-posts" role="tabpanel" aria-labelledby="pills-home-tab">
    <div class="row g-2">
      <% posts.each do |post| %>
        <% post.images.each do |image| %>
          <div class="col-6 mx-auto">
            <%= link_to [user, post] do %>
              <%= image_tag image.variant(resize_to_limit: [400, 400]), class: 'preview-image' %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="d-flex justify-content-center mt-5">
      <%= paginate posts, class: "pagination" %>
    </div>
  </div>
  <div class="tab-pane fade" id="pills-liked" role="tabpanel" aria-labelledby="pills-liked-tab">LIKED</div>
</div>
