<div class="user-profile">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mb-5">Following</h1>
      <% @following.each do |user| %>
        <div class="user my-4">
          <span class="img-fluid mt-1 pe-5"><%= gravatar_for user.email %> <%= link_to user.name, user, class: "mx-3" %></span>
        </div>
        <hr/>
      <% end %>
      <div class="d-flex justify-content-center">
        <%= paginate @following, class: "pagination" %>
      </div>
    </div>
  </div>
</div>